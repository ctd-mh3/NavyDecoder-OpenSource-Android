  <color name="appBackground">#f5f5f5</color>
  <color name="mainDescription_Background">#e2e2e2</color>
  <color name="decodeDescription_Background">#e2e2e2</color>

  <!--   your app branding color for the app bar -->
  <color name="colorPrimary">#0446ef</color>
  <!--   darker variant for the status bar and contextual app bars -->
  <color name="colorPrimaryDark">#303F9F</color>
  <!--   theme UI controls like checkboxes and text fields -->
  <color name="colorAccent">#FFFFFF</color>
  <color name="applicationTextColor">#0446ef</color>
  <color name="spinnerText">#FFFFFF</color>
  <!-- Sets the color of the text in a spinner when the user has opened the spinner to select a new value -->
  <color name="spinnerTextColor">#FFFFFF</color>
  <!-- Sets the color for the text background in a spinner before the user selects a new value -->
  <color name="spinnerPopupBackgroundColor">#797676</color>

  <!-- Rater dialog -->
  <color name="raterButtonTextColor">#101010</color>

  <!-- Menu -->
  <color name="menuTextColor">#FFFFFF</color>
