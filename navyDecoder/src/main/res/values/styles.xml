<?xml version="1.0" encoding="utf-8"?>
<resources>
  <!--
  // ************************************************************************
  //
  //  Main theme declaration
  //
  // ************************************************************************
   -->
  <style name="ApplicationTheme" parent="Theme.AppCompat.DayNight.DarkActionBar">
    <item name="android:textColor">@color/applicationTextColor</item>
    <item name="android:typeface">normal</item>

    <item name="android:gravity">center</item>
    <item name="android:textSize">@dimen/applicationTheme_textSize</item>

    <!--   your app branding color for the app bar -->
    <item name="colorPrimary">@color/colorPrimary</item>
    <!--   darker variant for the status bar and contextual app bars -->
    <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
    <!--   theme UI controls like checkboxes and text fields -->
    <item name="colorAccent">@color/colorAccent</item>

    <item name="android:actionMenuTextAppearance">@style/MyActionBar.MenuTextStyle</item>

    <!-- https://stackoverflow.com/questions/19659637/how-to-change-the-background-color-of-action-bars-option-menu-in-android-4-2 -->
    <!-- This is the styling for action bar -->
    <item name="android:actionBarStyle">@style/MyActionBar</item>
    <!--To change the text styling of options menu items</item>-->
    <item name="android:itemTextAppearance">@style/MyActionBar.MenuTextStyle</item>
    <!--To change the background of options menu-->
    <item name="android:itemBackground">@color/menuBackgroundColor</item>

  </style>

  <style name="MainDescription">
    <item name="android:background">@color/mainDescription_Background</item>
    <item name="android:textSize">@dimen/mainDescription_textSize</item>
    <item name="android:textStyle">bold</item>

    <item name="android:paddingTop">@dimen/mainDescription_paddingTop</item>
    <item name="android:paddingBottom">@dimen/mainDescription_paddingBottom</item>
    <item name="android:gravity">center_horizontal</item>
    <item name="android:layout_width">fill_parent</item>
    <item name="android:layout_height">wrap_content</item>
  </style>

  <style name="MainDecodeDescription">
    <item name="android:paddingTop">@dimen/mainDecodeDescription_paddingTop</item>
    <item name="android:layout_marginLeft">10dp</item>
    <item name="android:textSize">@dimen/mainDecodeDescription_textSize</item>
    <item name="android:textStyle">bold</item>
    <item name="android:gravity">left</item>
    <item name="android:layout_width">wrap_content</item>
    <item name="android:layout_height">wrap_content</item>
  </style>

  <style name="MainDecodeSpinner">
    <item name="android:layout_marginTop">@dimen/mainDecodeSpinner_marginTop</item>
    <item name="android:layout_marginBottom">@dimen/mainDecodeSpinner_marginBottom</item>
    <item name="android:gravity">left</item>
    <item name="android:layout_width">wrap_content</item>
    <item name="android:layout_height">wrap_content</item>
    <item name="android:minWidth">120dp</item>
    <item name="android:dropDownWidth">wrap_content</item>
  </style>

  <style name="DecodeDescription">
    <item name="android:background">@color/decodeDescription_Background</item>
    <item name="android:paddingLeft">10dp</item>
    <item name="android:paddingBottom">2dp</item>
    <item name="android:paddingTop">2dp</item>
    <item name="android:textSize">@dimen/decodeDescription_textSize</item>
    <item name="android:textStyle">normal</item>
    <item name="android:gravity">left</item>
    <item name="android:layout_width">fill_parent</item>
    <item name="android:layout_height">wrap_content</item>
  </style>

  <style name="MyActionBar" parent="@android:style/Widget.Holo.ActionBar">
    <item name="android:titleTextStyle">@style/MyActionBar.TitleTextStyle</item>
  </style>

  <!-- Apparently not used, left here for reference -->
  <style name="MyActionBar.TitleTextStyle" parent="android:style/TextAppearance.Holo.Widget.ActionBar.Title">
    <item name="android:textColor">#333333</item>
    <item name="android:textStyle">bold</item>
    <item name="android:textSize">@dimen/MyActionBarTitleTextStyle_textSize</item>
  </style>

  <style name="MyActionBar.MenuTextStyle" parent="android:style/TextAppearance.Holo.Widget.ActionBar.Title">
    <item name="android:textColor">@color/applicationTextColor</item>
  </style>

  <!-- Not using a theme with Actionbar and xml places a title looking TextView -->
  <style name="RaterDialogStyle" parent="Theme.AppCompat.DayNight.NoActionBar">
    <!-- Used for the title and text -->
    <item name="android:textColorPrimary">@color/raterButtonTextColor</item>
    <!-- Used for the background -->
    <!-- 21JUL2020: This appears to have no effect on Android 10 target -->
    <!--<item name="android:background">@color/raterBackgroundColor</item>-->
    <item name="android:textColor">@color/raterButtonTextColor</item>
  </style>

</resources>